# Database Configuration
# Railway will provide DATABASE_URL automatically, or set manually:
DATABASE_URL=postgresql://user:password@host:port/database

# Stripe Configuration (use your test keys for demo)
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application Settings
APP_ENV=production
DEBUG=False

# CORS Origins (comma-separated, use your Vercel domain)
CORS_ORIGINS=https://your-app.vercel.app,https://www.your-domain.com

# Admin Authentication
ADMIN_TOTP_SECRET=your_totp_secret_from_dev

# Admin setup page (MUST be False in production after initial setup)
ADMIN_SETUP_ENABLED=False

# Rate Limiting
RATE_LIMIT_ENABLED=True

# Redis (optional - leave empty to use in-memory cache)
REDIS_URL=

# Moderation Settings
REPORT_THRESHOLD=10
